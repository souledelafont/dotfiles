# Word documents
application/msword; ~/.mutt/bin/view-attachment.sh %s "-" '/Applications/TextEdit.app'

# Images
image/jpg;   ~/.mutt/bin/view-attachment.sh %s jpg
image/jpeg;  ~/.mutt/bin/view-attachment.sh %s jpg
image/pjpeg; ~/.mutt/bin/view-attachment.sh %s jpg
image/png;   ~/.mutt/bin/view-attachment.sh %s png
image/gif;   ~/.mutt/bin/view-attachment.sh %s gif

# PDFs
application/pdf; ~/.mutt/bin/view-attachment.sh %s pdf

# HTML
text/html; ~/.mutt/bin/view-attachment.sh %s html

# Unidentified files
application/octet-stream; ~/.mutt/bin/view-attachment.sh %s "-"

# Plain text
text/plain; vim %s
